		set(SUBSYSTEM_FOLDER_NAME "x64")
	ELSE()
		set(SUBSYSTEM_FOLDER_NAME "x86")
	ENDIF()
ELSEIF(${APPLE})
	set(SYSTEM_FOLDER_NAME "Mac")
	# http://www.cmake.org/pipermail/cmake/2007-October/017286.html
   MESSAGE(FATAL_ERROR "Not implemented yet. Need to parse files.")
ELSEIF(${UNIX})
	set(SYSTEM_FOLDER_NAME "Mac")
	IF(CMAKE_SIZEOF_VOID_P MATCHES 8)
		set(SUBSYSTEM_FOLDER_NAME "x64")
	ELSE()
		set(SUBSYSTEM_FOLDER_NAME "x86")
	ENDIF()
